SHELL=/bin/sh
CC=@CC@
LD=@FORLD@
prefix=@prefix@
top_srcdir=@top_srcdir@
exec_prefix=@exec_prefix@
RM=$(top_srcdir)/devscripts/rm_if
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
INSTALL=@top_srcdir@/conf/install-sh -c
FC=@F77@
FFLAGS=@FFLAGS@
LIBS=@LIBS@ @LIBM@

SOURCES = \
	caxpy.f \
	cgeco.f \
	cmul.f  \
	csint.f  \
	csval.f  \
	daxpy.f  \
	dcsint.f  \
	dcsval.f  \
	dgeco.f  \
	dmul.f  \
	dpermu.f  \
	dppval.f  \
	dsrch.f  \
	dsvrgn.f  \
	gn.f  \
	isrch.f  \
	msceez.f \
	mskrv2.f \
	mstrms.f \
	mskrv1.f \
	msshch.f \
	permu.f  \
	ppval.f  \
	saxpy.f  \
	sgeco.f  \
	smul.f  \
	srch.f  \
	ssrch.f  \
	svign.f  \
	svrgn.f  \
	toms510.f \
	umach.f  \
	zaxpy.f  \
	zgeco.f  \
	zmul.f

OBJECTS = $(SOURCES:.f=.o) boxsmooth.o
EXPORTS = MdsMath.export

all: @MAKESHLIBDIR@ @MAKESHLIBDIR@libMdsMath@SHARETYPE@ 

depend:
	@makedepend -- $(CFLAGS) -- $(SOURCES)

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 755  @MAKESHLIBDIR@libMdsMath@SHARETYPE@ @libdir@

@MAKESHLIBDIR@ :
	mkdir @MAKESHLIBDIR@

ifeq "@MACOSX@" ""

clean:
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) @MAKESHLIBDIR@libMdsMath@SHARETYPE@


@MAKESHLIBDIR@libMdsMath@SHARETYPE@ : $(OBJECTS) 
	$(LD) -o $@ @FOR_LINKSHARED@ $(OBJECTS) -L@MAKESHLIBDIR@ -lMdsShr @FOR_LDFLAGS@ $(LIBS) $(LDFLAGS)

else

OBJ_i386 = $(SOURCES:.f=.o_i386) boxsmooth.o

%.o_i386 : %.f
	$(FC) -c $(FFLAGS) -m32 $< -o $@

clean:
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) libMdsMath@SHARETYPE@* @MAKESHLIBDIR@libMdsMath@SHARETYPE@

@MAKESHLIBDIR@libMdsMath@SHARETYPE@ : libMdsMath@SHARETYPE@ libMdsMath@SHARETYPE@_i386
	lipo -create -o $@ $^

libMdsMath@SHARETYPE@ : $(OBJECTS)
	$(LD) -o $@ @FOR_LINKSHARED@ $(OBJECTS) -L@MAKESHLIBDIR@ -lMdsShr @FOR_LDFLAGS@ $(LIBS) $(LDFLAGS)

libMdsMath@SHARETYPE@_i386 : $(OBJECTS_i386)
	$(LD) -o $@ @FOR_LINKSHARED@ $(OBJECTS_i386) -L@MAKESHLIBDIR@ -lMdsShr @FOR_LDFLAGS@ $(LIBS) $(LDFLAGS) -m32
endif

